{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noEmit": true,
  },
  "references": [{ "path": "./apps/api" }, { "path": "./apps/mobile" }],
  "files": [],
  "include": [],
  "exclude": ["node_modules", "dist", "build", ".expo", ".turbo"],
}
